{
  "name": "mithril-redux",
  "version": "1.0.0",
  "description": "A Mithril boilerplate for lightning fast development",
  "main": "src/main.js",
  "repository": "https://github.com/abradley2/mithril-redux",
  "author": "Tony Bradley <antbradley91@gmail.com>",
  "license": "Unlicense",
  "scripts": {
    "test": "xo",
    "lint": "xo --fix",
    "dev:client": "NODE_ENV=development budo ./client/main.js:bundle.min.js --pushstate --live --dir ./public",
    "dev:server": "NODE_ENV=development PORT=5000 nodemon --watch ./server ./server/main.js | pino-colada",
    "start:dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "prod:client": "NODE_ENV=production browserify ./client/main.js -g uglifyify -o ./public/bundle.min.js",
    "prod:server": "NODE_ENV=production PORT=5000 node ./server/main.js",
    "start:prod": "npm run prod:client && npm run prod:server",
    "start": "npm run start:prod"
  },
  "browserify": {
    "transform": [
      "babelify",
      "sheetify/transform",
      "envify"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-3"
    ]
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ],
    "semicolon": false
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "express": "^4.15.3",
    "graphql": "^0.10.5",
    "icepick": "^1.3.0",
    "level": "^1.7.0",
    "mithril": "^1.0.1",
    "pino": "^4.7.1",
    "redux": "^3.6.0",
    "reselect": "^2.5.4",
    "shortid": "^2.2.8",
    "ws": "^3.1.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "budo": "^10.0.4",
    "concurrently": "^3.5.0",
    "deep-equal": "^1.0.1",
    "envify": "^4.0.0",
    "localforage": "^1.5.0",
    "nodemon": "^1.11.0",
    "pino-colada": "^1.4.1",
    "redux-logger": "^3.0.6",
    "sheetify": "^6.0.1",
    "uglifyify": "^4.0.3",
    "watchify": "^3.9.0",
    "xo": "^0.18.2"
  }
}
